.swiper-tab{  
    width: 100%;  
    /* border-bottom: 2rpx solid #777777;   */
    text-align: center;  
    line-height: 80rpx;
    border-top: 2rpx solid white;
    }  

.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    background-color: white;
}  
