/* pages/record/record.wxss */
page{
  background:#F9F9F9;
}
.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/*record-list-container开始*/
.record-list-container{
  width:97%;
  margin:18rpx auto 0;
  background:#fff;
}
.record-list-title{
  width:100%;
  height:78rpx;
  text-align: center;
  border-bottom:1px solid  #F9F9F9;
}
.record-list-title text{
  font-size:31rpx;
  color:#4C4B4B;
  line-height:78rpx;
}
.list-box{
  width:100%;
  height:310rpx;
  border-bottom:1px solid #F9F9F9;
}
.record-list-btm-title{
  width:100%;
  height:75rpx;
}
.record-list-btm-title .order{
  float:left;
  font-size:25rpx;
  line-height:75rpx;
  text-indent: 30rpx;
  color:#A3A2A2;
}
.status{
  float:right;
  font-size:28rpx;
  line-height:75rpx;
  padding-right:20rpx;
  color:#D84242;
}
.goods-imgbox{
  width:221rpx;
  height:205rpx;
  /* border:1px solid #808080; */
  border-radius:10rpx;
  float:left;
  margin:21rpx 0 0 29rpx;
}
.list-des{
  width:430rpx;
  height:245rpx;
  float:right;
  margin:21rpx 22rpx 0 0;
  overflow:hidden;
}
.list-des-title{
  width:100%;
  height:40rpx;
  margin-top:25rpx;
  line-height:40rpx;
}
.goods-name{
  font-size:37rpx;
  color:#4C4B4B;
  float:left;
}
.goods-price{
  font-size:40rpx;
  color:#4C4B4B;
  float:right;
}
.goods-number{
  width:100%;
  height:40rpx;
  margin-top:145rpx;
  line-height:40rpx;
}
.goods-number text{
  font-size:28rpx;
  float:right;
  color:#4C4B4B;
}
.single{
  width:97%;
  height:454rpx;
  margin:21rpx auto 0;
  background:#fff;
}
/*record-list-container结束*/

.pick-box{
  /* max-height: 640rpx; */
  overflow:hidden;
