/* pages/begafter/begafter.wxss */
page{
  background:#F4F4F4;
}
.clearfix:after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/*header-container开始*/
.header-container{
  width:100%;
  height:340rpx;
  background:#D84242;
  overflow: hidden;
}
.userimg-box{
  width:114rpx;
  height:114rpx;
  margin:30rpx auto 0;
  background:#BFBFBF;
  border-radius:10rpx;
}
.title-infor{
  width:252rpx;
  height:50rpx;
  margin:38rpx auto 0;
}
.title-infor text{
  font-size:28rpx;
  color:#FBDFB3;
}
/*header-container结束*/
/*box-container开始*/
.box-container{
  width:93%;
  height:890rpx;
  background:#fff;
  margin:-55rpx auto 0;
  border-radius:10rpx;
  overflow: hidden;
}
.list-box {
  width:654rpx;
  height:231rpx;
  margin:28rpx auto 0;
  border:1px solid #FACD89;
}
.goods-imgbox{
  width:180rpx;
  height:180rpx;
  border:1px solid #808080;
  border-radius:10rpx;
  float:left;
  margin:25rpx 0 0 26rpx;
}
.list-des{
  width:380rpx;
  height:225rpx;
  float:right;
  overflow:hidden;
  margin-right:31rpx;
}
.list-des-title{
  width:100%;
  height:40rpx;
  margin-top:25rpx;
  line-height:40rpx;
  color:#FCA95F;
}
.goods-name{
  font-size:28rpx;
  float:left;
}
.goods-price{
  font-size:28rpx;
  float:right;
}
.goods-number{
  width:100%;
  height:40rpx;
  line-height:40rpx;
}
.goods-number text{
  font-size:24rpx;
  float:right;
  color:#7A7977;
  margin-top:120rpx;
}
.bottom-btn{
  width:616rpx;
  height:102rpx;
  background:#D84242;
  margin:300rpx auto 0;
  border-radius:10rpx;
  text-align:center;
}
.bottom-btn text{
  font-size:40rpx;
  line-height:102rpx;
  color:#fff;
}
.get-inform{
  width:617rpx;
  height:122rpx;
  border:1px solid #BFBFBF;
  border-radius:10rpx;
  overflow: hidden;
  margin:42rpx auto 0;
}
.getimg-box{
  width:75rpx;
  height:75rpx;
  background:#C0BFBF;
  margin:20rpx 0 0 18rpx;
  float:left;
}
.status{
  font-size:21rpx;
  float:right;
  padding:50rpx 24rpx;
  color:#F6AD6B;
}
/*box-container结束*/